    timesplanned: LectureName â†’count
    courstimes: LectureName â†’count
}

theory T:V {
    âˆ€l: courstimes(l)=timesplanned(l).

    âˆ€p,t,l: sheduled(p,t,l) â‡ isfree(p,t) âˆ§ teacher(l)=p.
    âˆ€p,t,l: Â¬sheduled(p,t,l) â‡ Â¬isfree(p,t) âˆ¨ Â¬(teacher(l)=p).

    âˆ€l in LectureName:#{ p in AcademicStaff,t in Lecturemoment : sheduled(p,t,l) } =timesplanned(l).
    
    âˆ€p,p2,t,l,l2: Â¬sheduled(p,t,l) â‡ sheduled(p2,t,l2) âˆ§ Â¬(p=p2).

    âˆ€p in AcademicStaff,l,l2 in LectureName: teacher(l)=p âˆ§Â¬(l=l2) â‡’Â¬(teacher(l2)=p).

